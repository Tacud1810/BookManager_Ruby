
<div class="container-md">
	
	<div class="row justify-content-center">
		<div class="col-8">
			<%= render 'shared/errors', obj: @author %>
			<%= form_with(model: @author, class:"p-3 mb-3 bg-info rounded", local:true) do |f|%>
				<div class="row mb-3">
					<%= f.label :name, class:"col-2 col-form-label" %>
					<div class="col-10">
					<%= f.text_field :name, class:"form-control"%>
					</div>					
				</div>

				<div class="row mb-3">
					<%= f.label :year_of_birth, class:"col-2 col-form-label" %>
					<div class="col-2">
					<%= f.text_field :year_of_birth, class:"form-control", name:"datepicker", id:"datepicker"%>
					</div>					
				</div>

				<div class="row mb-3">
					<%= f.label :nationality, class:"col-2 col-form-label" %>
					<div class="col-10">
					<%= f.text_field :nationality, class:"form-control"%>
					</div>					
				</div>

				<div class="row mb-3">
					<%= f.label :description, class:"col-2 col-form-label" %>
					<div class="col-10">
					<%= f.text_area :description, class:"form-control", rows:"8" %>
					</div>
				</div>

				<div class="row mb-3 justify-content-center">
					<%= f.submit class:"btn btn-outline-dark btn-md col-2"%>
				</div>
			<% end %>
			<%= link_to '[ Cancel and return to authors page ]', authors_path, class:"text-black" %>
		</div>
		
	</div>


</div>

<script>
		$(document).ready(function(){
			$("#datepicker").datepicker({
				format: "yyyy",
				viewMode: "years", 
				minViewMode: "years",
				autoclose:true
			});   
		})


</script>