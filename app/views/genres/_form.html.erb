
<div class="container-md">
	
	<div class="row justify-content-center">
		<div class="col-8">
			<%= render 'shared/errors', obj: @genre %>
			<%= form_with(model: @genre, class:"p-3 mb-3 bg-info rounded", local:true) do |f|%>
				<div class="row mb-3">
					<%= f.label :Název, class:"col-2 col-form-label" %>
					<div class="col-10">
					<%= f.text_field :name, class:"form-control"%>
					</div>
				</div>
				<div class="row mb-3">
					<%= f.label :"Popis", class:"col-2 col-form-label" %>
					<div class="col-10">
					<%= f.text_area :description, class:"form-control", rows:"8" %>
					</div>
				</div>

				<div class="row mb-3 justify-content-center">
					<%= f.submit class:"btn btn-outline-dark btn-md col-2"%>
				</div>
			<% end %>
			<%= link_to '[ Zrušit a vrátit se na přehled žánrů ]', genres_path, class:"text-black" %>
		</div>
		
	</div>
</div>