<div class="container-md">
	
	<div class="row justify-content-center">
		<div class="col-8">
			<%= form_with(scope: :session, url: login_path, class:"p-3 mb-3 bg-info rounded", local:true) do |f|%>
				<div class="row mb-3">
					<%= f.label :email, class:"col-2 col-form-label" %>
					<div class="col-10">
					<%= f.text_field :email, class:"form-control", placeholder: "Enter your email address"%>
					</div>
				</div>
				<div class="row mb-3">
					<%= f.label :password, class:"col-2 col-form-label" %>
					<div class="col-10">
					<%= f.password_field :password, class:"form-control", placeholder: "Enter your password" %>
					</div>
				</div>

				<div class="row mb-3 justify-content-center">
					<%= f.submit "Log in", class:"btn btn-outline-dark btn-md col-3"%>
				</div>
			<% end %>
			<%= link_to '[ Cancel and return to books ]', books_path, class:"text-black" %>
		</div>
		
	</div>
</div>