<div class="row clearfix ">
	<% @books.each do |book|%>
	
		<div class="col-lg-3">
			<div class="card mt-2" style="height: 350px">
				
				<div class="card-header fst-italic">
					<h5 class="card-title" style="text-indent: 10px"><%= link_to truncate(book.title, length: 25), book_path(book), class:"text-success"%></h5>
				</div>
				<div class="card-body">
					<div class="image-container" >
							<%= link_to image_tag(book.image, alt: book.title, height:"130"), book_path(book) %>
					</div>
					<div>
					<%= truncate(book.description, length: 150) %>
					</div>
					
					
				
				</div>
				<div class="card-footer text-body-secondary">
					<div class="row">
						<div class="col-12 text-end">
							<% if logged_in? && current_user.admin? %>
								<%= link_to 'Upravit', edit_book_path(book), class:"btn btn-outline-warning btn-sm" %>
								<%= link_to 'Smazat', book_path(book), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class:"btn btn-outline-danger btn-sm" %>
							<% end %>
						</div>
					</div>	
				</div>
			</div>
		</div>		
	
	<% end %>
</div>
