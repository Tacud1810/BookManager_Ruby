<div class="row clearfix ">
	<% @books.each do |book|%>
	
		<div class="col-lg-3">
			<div class="card mt-2" style="height: 350px">
				
				<div class="card-header fst-italic">
					<h5 class="card-title" style="text-indent: 10px"><%= link_to truncate(book.name, length: 25), book_path(book), class:"text-success"%></h5>
				</div>
				<div class="card-body">
					<p class="card-text"><%= truncate(book.description, length: 200) %></p>
					
					
				
				</div>
				<div class="card-footer text-body-secondary">
					<div class="row">
						<div class="col-12">
						<%= link_to 'Edit', edit_book_path(book), class:"btn btn-outline-warning btn-sm" %>
						<%= link_to 'Delete', book_path(book), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class:"btn btn-outline-danger btn-sm" %>
						</div>
					</div>	
				</div>
			</div>
		</div>		
	
	<% end %>
</div>
